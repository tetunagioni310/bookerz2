<div class="col-md-3">
        <h2>User info</h2>
          <%= image_tag user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <a href="/users/<%= user.id %>/edit" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></a>
        </div>
        
        <h2 class="mt-3">New book</h2>
        
        <%= form_with model: book, url: books_path, method: :post do |f| %>
        
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control", value: "" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control", value: "" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success"  %>
        </div>
        
        <% end %>
    </div>