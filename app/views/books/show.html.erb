<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'shared/info', user: @user, book: @book%>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-invers">
        <tbody>
            <tr>
              <td>
                <a href="/users/<%= @book.user.id %>">
                  <%= image_tag @book.user.get_profile_image(80,80) %>
                <br>
                <%=  @book.user.name %>
                </a>
              </td>
              <td>
                <a href="/books/<%= @book.id %>"><%= @book.title %></a>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user == current_user %>
              <td>
                <a href="/books/<%= @book.id %>/edit" class="btn btn-sm btn-success">Edit</a>
              </td>
              <td>
                <a href="/books/<%= @book.id %>" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete" data-confirm="本当に削除しますか？">Destroy</a>
              </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>