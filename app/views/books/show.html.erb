<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image.jpeg', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <a href="/users/<%= @user.id %>/edit" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></a>
        </div>
        
        <h2 class="mt-3">New book</h2>
        
        <%= form_with model: @book, url: books_path, method: :post do |f| %>
        
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control", value: "" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control", value: "" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success"  %>
        </div>
        
        <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-invers">
        <tbody>
            <tr>
              <td>
                <a href="/users/<%= @book.user.id %>">
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'default-image.jpeg', size: "80x80" %>
                <% end %>
                <br>
                <%=  @book.user.name %>
                </a>
              </td>
              <td>
                <a href="/books/<%= @book.id %>"><%= @book.title %></a>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user == current_user %>
              <td>
                <a href="/books/<%= @book.id %>/edit" class="btn btn-sm btn-success">Edit</a>
              </td>
              <td>
                <a href="/books/<%= @book.id %>" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete" data-confirm="本当に削除しますか？">Destroy</a>
              </td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>