<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <h2>User info</h2>
        <% if current_user.profile_image.attached? %>
          <%= image_tag current_user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image.jpeg', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <a href="/users/<%= current_user.id %>/edit" class="btn btn-outline-secondary btn-block"><i class="fa fa-user-cog"></i></a>
        </div>
        
        <h2 class="mt-3">New book</h2>
        
        <%= form_with model: @book, url: books_path, method: :post do |f| %>
        
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "Creat Book", class: "btn btn-success"  %>
        </div>
        
        <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-invers">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'default-image.jpeg', size: "80x80" %>
                <% end %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <a href="/users/<%= user.id %>">Show</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>